{
  "manifest_version": 3,
  "name": "ShopWise Collective",
  "version": "1.0.0",
  "description": "Track prices and get alerts across Amazon and Takealot with real-time insights",
  "permissions": [
    "storage",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.co.za/*",
    "https://*.takealot.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.co.za/*",
        "https://*.takealot.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "shopwise.png"
    }
  },
  "icons": {
    "128": "shopwise.png"
  }
}
